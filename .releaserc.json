{
    "branches": ["main"],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "releaseRules": [
                    {
                        "type": "chore",
                        "release": "patch"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Features"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "docs",
                            "section": "üìù Documentation"
                        },
                        {
                            "type": "chore",
                            "section": "üîß Chores"
                        },
                        {
                            "type": "test",
                            "section": "üö® Tests"
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance"
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Refactoring"
                        },
                        {
                            "type": "style",
                            "section": "üíé Styling"
                        },
                        {
                            "type": "build",
                            "section": "üèóÔ∏è Build"
                        },
                        {
                            "type": "ci",
                            "section": "üë∑ CI/CD"
                        }
                    ]
                }
            }
        ],
        ["@semantic-release/changelog"],
        [
            "@semantic-release/github",
            {
                "addReleases": "bottom",
                "releasedLabels": false,
                "failComment": false,
                "failTitle": false,
                "assets": "release-assets/*"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["CHANGELOG.md"],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
                "pushForce": true
            }
        ],
        ["semantic-release-export-data"]
    ]
}
